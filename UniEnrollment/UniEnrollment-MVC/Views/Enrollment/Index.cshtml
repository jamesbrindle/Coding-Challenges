@model IEnumerable<UniEnrollment_MVC.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollments</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnrollmentDate)
        </th>
        <th>
            Course Code
        </th>
        <th>
            Course Name
        </th>
        <th>
            Student Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseCode)
        </td>
        <td>
            @Html.ActionLink(item.Course.Name, "Details", "Course", new { id = item.CourseID }, null)
        </td>
        <td>
            @Html.ActionLink(item.User.Name, "Details", "Student", new { id = item.StudentID }, null)
        </td>
    </tr>    

</table>
<br />
<br />
<p>
    @Html.ActionLink("Courses List", "Index", "Course", null, null)
</p>

@if (UniEnrollment_MVC.Helpers.CookieHelper.LoggedInUserType == UniEnrollment_MVC.Helpers.CookieHelper.LoggedInUserTypeEnum.ADMIN ||
                        UniEnrollment_MVC.Helpers.CookieHelper.LoggedInUserType == UniEnrollment_MVC.Helpers.CookieHelper.LoggedInUserTypeEnum.PROFESSOR)
{
    @Html.ActionLink("Student List", "Index", "Student", null, null)
}
